<div class="row">
  <div class="col-lg-10">
    <h1>User Stories</h1>
  </div>
  <div class="col-lg-2">
    <%= link_to 'New User Story', new_story_path, :class => "btn btn-default btn-lg btn-block new-btn" %>
  </div>
</div>
<hr/>
<% if can? :manage, :all %>
    <div class="row">
    <div class="col-lg-6">
      <h2>Open</h2>
        <div class="row">
            <% @stories.each do |story| %>
                <div class="col-lg-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <%# priority = (story.impact * story.effort) %>
                                <%= story.name %>
                            </h3>
                            <%= link_to edit_story_path(story) do %>
                                <button class="btn btn-default btn-xs right">
                                  <span class="glyphicon glyphicon-pencil"></span> Edit
                                </button>
                            <% end %>
                        </div>
                        <div class="panel-body">
                            <%= story.description %>
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-lg-4"><strong>PRIORITY: <%= story.priority %></strong></div>
                                <div class="col-lg-4"><small>
                                    Impact:  <%= story.impact %> |
                                    Effort: <%= story.effort %>
                                </small></div>
                                <div class="col-lg-4">
                                    <small>For: <%= story.persona ? story.persona.name : '' %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="col-lg-6">
      <h2>Completed</h2>
      <div class="row">
          <% @completed.each do |story| %>
              <div class="col-lg-12">
                  <div class="panel panel-default">
                      <div class="panel-heading">
                          <h3 class="panel-title">
                              <%# priority = (story.impact * story.effort) %>
                              <%= story.name %>
                          </h3>
                          <%= link_to edit_story_path(story) do %>
                              <button class="btn btn-default btn-xs right">
                                <span class="glyphicon glyphicon-pencil"></span> Edit
                              </button>
                          <% end %>
                      </div>
                      <div class="panel-body">
                          <%= story.description %>
                      </div>
                      <div class="panel-footer">
                          <div class="row">
                              <div class="col-lg-4"><strong>PRIORITY: <%= story.priority %></strong></div>
                              <div class="col-lg-4"><small>
                                  Impact:  <%= story.impact %> |
                                  Effort: <%= story.effort %>
                              </small></div>
                              <div class="col-lg-4">
                                  <small>For: <%= story.persona ? story.persona.name : '' %></small>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          <% end %>
      </div>
    </div>
    </div>
<% else %>
    <p>Access denied</p>
<% end %>
